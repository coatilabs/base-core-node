{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "rootDir": "app",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots" : ["./node_modules/@types", "./typings"]
  },
  "include": ["app/**/*.ts"],
  "exclude": ["node_modules", "./typings"],
  "files": ["app/**/*.d.ts"]
}
